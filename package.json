{
    "name": "typescript-library-boilerplate",
    "version": "0.0.0",
    "main": "index.ts",
    "scripts": {
        "start": "node build/index.js",
        "prebuild": "npm run lint",
        "build": "webpack",
        "lint": "eslint src --ext .ts,.tsx",
        "test": "jest --coverage",
        "test:watch": "jest --watch",
        "test:e2e": "npm run build && cypress run",
        "docs": "typedoc index.ts --name \"Sample SDK\" --includeVersion",
        "publish": "npm publish --folder ./build --access public",
        "release:patch": "standard-version --release-as patch --prerelease dev",
        "release:minor": "standard-version --release-as minor",
        "release:major": "standard-version --release-as major"
    },
    "lint-staged": {
        "**/*.js": [
            "eslint --fix",
            "prettier-eslint --write"
        ]
    },
    "husky": {
        "hooks": {
            "pre-commit": "lint-staged"
        }
    },
    "dependencies": {
        "tslib": "2.4.0"
    },
    "devDependencies": {
        "@types/jest": "28.1.6",
        "@types/node": "18.0.6",
        "@typescript-eslint/eslint-plugin": "5.30.7",
        "@typescript-eslint/parser": "5.30.7",
        "copy-webpack-plugin": "^11.0.0",
        "cypress": "10.3.1",
        "dotenv": "16.0.1",
        "dts-bundle-webpack": "1.0.2",
        "eslint": "8.20.0",
        "eslint-config-airbnb-base": "15.0.0",
        "eslint-config-prettier": "8.5.0",
        "eslint-plugin-import": "2.26.0",
        "eslint-plugin-jest": "26.6.0",
        "eslint-plugin-prettier": "4.2.1",
        "filemanager-webpack-plugin": "^7.0.0",
        "husky": "8.0.1",
        "jest": "28.1.3",
        "lint-staged": "13.0.3",
        "os-browserify": "0.3.0",
        "path-browserify": "^1.0.1",
        "prettier": "2.7.1",
        "prettier-eslint": "15.0.1",
        "prettier-eslint-cli": "6.0.1",
        "rimraf": "3.0.2",
        "standard-version": "9.5.0",
        "ts-jest": "28.0.7",
        "ts-loader": "^9.3.1",
        "tsutils": "3.21.0",
        "typedoc": "0.23.8",
        "typescript": "4.7.4",
        "wait-on": "6.0.1",
        "webpack": "^5.73.0",
        "webpack-cli": "4.10.0"
    }
}